<div class="container">
  <div class='row'>
    <div class='col-xs-6 border'>
      <h2>Word Information</h2>
      <ul class='display_word'>
        <li>Word: <%= @word.word() %></li>
        <li>Origin: <%= @word.origin() %></li>
        <li>Pronunciation: <%= @word.pronunciation() %></li>
        <li>Alternative Spelling: <%= @word.alternative_spelling() %></li>
      </ul>
    </div>
    <div class='col-xs-6 border'>
      <h2>Definitions with examples.</h2>
      <ul>
        <% @word.definitions().each() do |definition| %>
        <li>Definition: <%= definition.definition() %></li>
          <ul class="example">
            <li><%= definition.example() %></li>
          </ul>
        <% end %>
      </ul>
    </div>
  </div>
  <form action="/definition_addition">
    <input type="hidden" name="id" value="<%= @word.id() %>">
    <button type="submit" class='btn btn-success'>Add a new definition</button>
  </form>
</div>
<h3><a class='center' href="/">Home</a></h3>
